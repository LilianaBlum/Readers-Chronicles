@model IEnumerable<ReadersChronicle.Data.PendingFriendship>
@{
    ViewData["Title"] = "Sent Invites";
}

<div class="container" id="sent-invites-container">
    <h2 class="text-center mb-4">Sent Invites</h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invite in Model)
                    {
                        <tr>
                            <td>@invite.ApprovingUser.UserName</td>
                            <td>
                                <form asp-action="CancelInvite" method="post" class="d-inline">
                                    <input type="hidden" name="friendshipId" value="@invite.FriendshipID" />
                                    <button type="submit" class="btn btn-danger">Cancel</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center">You have not sent any friendship invites.</p>
    }
</div>

<style scoped>
    #sent-invites-container {
        margin-top: 50px;
        padding-top: 2%;
        background-color: #ffffff;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 20px;
    }

    .btn-danger {
        background-color: #e63946;
        border: none;
        float:right;
    }

        .btn-danger:hover {
            background-color: #d62828;
        }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table {
        width: 100%;
        margin-top: 20px;
    }

    thead {
        background-color: #6d486b;
        color: white;
    }

    .table-responsive {
        overflow-x: auto;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
    }

    p {
        font-size: 1.2rem;
        color: #666;
    }
</style>
