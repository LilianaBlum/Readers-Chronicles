@model ReadersChronicle.Models.ForgotPasswordViewModel

<div class="container d-flex align-items-center justify-content-center" id="main-container">
    <div id="forgot-password-container" class="w-100">
        <h2 class="fw-bold text-uppercase text-center mb-4">Forgot Password</h2>
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger pt-2 pb-0 text-center">
                <p>@TempData["ErrorMessage"]</p>
            </div>
        }

        @using (Html.BeginForm("GetSecurityQuestion", "Account", FormMethod.Post))
        {
            <div class="form-group py-3">
                @Html.LabelFor(m => m.UserNameOrEmail, new { @class = "pb-1 ps-2" })
                @Html.TextBoxFor(m => m.UserNameOrEmail, new { @class = "form-control rounded-pill w-100" })
                @Html.ValidationMessageFor(m => m.UserNameOrEmail, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-primary rounded-pill w-100 mt-2">Get Security Question</button>
        }
    </div>
</div>

