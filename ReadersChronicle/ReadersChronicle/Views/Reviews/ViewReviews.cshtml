@{
    ViewData["Title"] = "View Reviews";
}

<div class="container" id="reviews-container">
    <div class="bg-white p-4 rounded shadow">
        <h2 class="text-center mb-4">User Reviews</h2>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th scope="col" style="width: 20%;">Reviewer</th>
                        <th scope="col" style="width: 60%;">Content</th>
                        <th scope="col" style="width: 20%;">Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var review in Model)
                    {
                        <tr>
                            <td>@review.UserName</td>
                            <td>@review.Content</td>
                            <td>@review.Timestamp.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style scoped>
    #reviews-container {
        margin-top: 10%;
    }

    .bg-white {
        background-color: #ffffff;
    }

    .rounded {
        border-radius: 12px;
    }

    .shadow {
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .table {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 0;
    }

    .table thead {
        background-color: #8d6b88;
        color: #fff;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table td {
        word-wrap: break-word;
        word-break: break-word;
        white-space: normal;
    }

    .table td:nth-child(2) {
        text-align: left;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    @@media (max-width: 768px) {
        .table {
            font-size: 0.9rem;
        }

        #reviews-container {
            margin-top: 18%;
        }
    }
</style>
